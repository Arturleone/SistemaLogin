<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edtDataDoacao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Data da Doação"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/edtHorarioDoacao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Horário da Doação"
        app:layout_constraintTop_toBottomOf="@id/edtDataDoacao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/edtCpfUsuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="CPF do Usuário"
        app:layout_constraintTop_toBottomOf="@id/edtHorarioDoacao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/edtRgaPet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="RGA do Pet"
        app:layout_constraintTop_toBottomOf="@id/edtCpfUsuario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnRegistrarDoacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrar Doação"
        app:layout_constraintTop_toBottomOf="@id/edtRgaPet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
